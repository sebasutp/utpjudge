<%= form_for [@exercise, @exercise.exercise_problems.build], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :stype, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :stype, Testcase.judgeTypes %>
    </div>
  </div> 
  <div class="control-group">
    <%= f.label :problem_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :problem_id,Problem.all,:id,:name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :problem_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :problem_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Time Limit (s)", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time_limit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Program Limit (s)", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :prog_limit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Memory Limit (Kb)", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mem_lim, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :score, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
