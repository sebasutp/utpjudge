<h1>Listing languages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Ltype</th>
    <th>Compilation</th>
    <th>Execution</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%= language.name %></td>
    <td><b><%= language.ltype %></b></td>
    <td><pre><%= language.compilation %></pre></td>
    <td><pre><%= language.execution %></pre></td>
    <td><%= link_to 'Show', language %></td>
    <td><%= link_to 'Edit', edit_language_path(language) %></td>
    <td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

