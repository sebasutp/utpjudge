<h2>Submit solution</h2>
<%= form_for(@submission, :url=> {:action => "jdownload", :id=>@submission.id}, :html => {:method=>"put"}) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
      <%= f.label :outfile, :class=>'control-label' %>
      <div class="controls">
          <%= f.file_field :outfile %>
      </div>
  </div>

  <div class="control-group">
      <%= f.label :srcfile, :class=>'control-label' %>
      <div class="controls">
          <%= f.file_field :srcfile %>
      </div>
  </div>

  <div class="actions">
      <%= link_to "Download Input", {:controller=>"submissions",:action=>"downloadInput", 
          :exercise_problem=>@exercise_problem.id},{:class => 'btn btn-primary'} %>
      <%= f.submit :class => 'btn btn-success', :value => 'Submit solution' %>
  </div>
<% end %>
