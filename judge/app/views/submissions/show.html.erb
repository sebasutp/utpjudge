<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
  <dt><strong>User code:</strong></dt>
  <dd><%= @submission.user.code %></dd>
  <dt><strong>User name:</strong></dt>
  <dd><%= @submission.user.name %></dd>
  <dt><strong>Exercise:</strong></dt>
  <dd><%= @submission.exercise_problem.exercise.name %></dd>
  <dt><strong>Problem:</strong></dt>
  <dd><%= @submission.exercise_problem.problem.name %></dd>
  <dt><strong>Veredict:</strong></dt>
  <dd><%= @submission.veredict %></dd>
  <dt><strong>Time:</strong></dt>
  <dd><%= @submission.time %></dd>
  <dt><strong>Init Date:</strong></dt>
  <dd><%= @submission.init_date %></dd>
  <dt><strong>End date:</strong></dt>
  <dd><%= @submission.end_date %></dd>
</dl>


<div id="editor"><%= @srccode %></div>
    
<script src="http://d1n0x3qji82z53.cloudfront.net/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/tomorrow_night");
    editor.getSession().setMode("ace/mode/c_cpp");
</script>




<div class="form-actions">
<% if @current_user.has_roles(User.roles[:psetter]) %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              submissions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_submission_path(@submission), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              submission_path(@submission),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<% end %>
<%= link_to t('.b2',:default => t("Back to exercise")),[@exercise_problem.exercise, @exercise_problem], :class=>'btn btn-primary' %> 
</div>

