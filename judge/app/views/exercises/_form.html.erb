<%= form_for @exercise, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h3 class="text-error">The exercise can't be create</h3>
      <h4 class="text-error"> <%= pluralize(@exercise.errors.count, "error") %> </h4>
      <ul>
      <% @exercise.errors.full_messages.each do |msg| %>
        <li class="text-error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :from_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :from_date, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :to_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :to_date, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                exercises_path, :class => 'btn' %>
  </div>
<% end %>
