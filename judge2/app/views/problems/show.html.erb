<%- model_class = Problem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @problem.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @problem.pdescription.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @problem.notes %></dd>
</dl>


<%  if @user and @user.has_roles(User.roles[:psetter]) then %> 
  <hr class="bs-docs-separator"> 
  <h3>Test cases: </h3>
  <%= render "testcases/index" %>
  <h3>Add new test case: </h3>
  <%= render "testcases/form" %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                problems_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_problem_path(@problem), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                problem_path(@problem),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>
<% end %>
