<%= form_for [@excercise, @excercise.excercise_problems.build], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :problem_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :problem_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_limit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time_limit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :score, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :problem_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :problem_id,Problem.all,:id,:name %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
