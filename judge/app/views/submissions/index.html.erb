<h1>Listing submissions</h1>

<table>
  <tr>
    <th>Init date</th>
    <th>End date</th>
    <th>Veredict</th>
    <th>Time</th>
    <th>Exercise problem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.init_date %></td>
    <td><%= submission.end_date %></td>
    <td><%= submission.veredict %></td>
    <td><%= submission.time %></td>
    <td><%= submission.exercise_problem %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

